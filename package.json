{
  "name": "@dxkit-org/dev-kit",
  "version": "1.0.0",
  "description": "A comprehensive CLI toolkit for modern development workflows - featuring task automation, project cleaning, and developer utilities",
  "keywords": [
    "cli",
    "toolkit",
    "development",
    "workflow",
    "automation",
    "typescript",
    "developer-tools",
    "build-tools",
    "task-runner",
    "project-management",
    "dev-kit",
    "modern-dev",
    "cli-tools"
  ],
  "bin": {
    "dk": "./dist/cli.js"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/AdarshHatkar/advanced-dev-kit.git"
  },
  "homepage": "https://github.com/AdarshHatkar/advanced-dev-kit#readme",
  "bugs": {
    "url": "https://github.com/AdarshHatkar/advanced-dev-kit/issues"
  },
  "author": {
    "name": "Adarsh Hatkar",
    "url": "https://github.com/AdarshHatkar"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "npx rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "release:patch": "npm version patch",
    "postversion": "git push && git push --tags && npm publish",
    "deploy:dev": "adk deploy dev",
    "deploy:prod": "adk deploy prod",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g run-project-commands"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.8",
    "advanced-js-kit": "^1.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-spinners": "^3.2.0",
    "commander": "^11.0.0",
    "figlet": "^1.7.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.7.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.0.10",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.4.0"
  }
}
